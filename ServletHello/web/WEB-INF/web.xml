<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <!--指定 Servlet 的 name, 相当于 @WebServlet 的 name 属性-->
        <servlet-name>firstservlet2</servlet-name>
        <servlet-class>com.rongzi.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>firstservlet2</servlet-name>
        <!--指定 Servlet 映射的地址，相当于 @WebServlet 的 urlPatterns 属性-->
        <url-pattern>/firstservlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>timerservlet</servlet-name>
        <servlet-class>com.rongzi.TimerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>connDbServlet</servlet-name>
        <servlet-class>com.rongzi.ConnDbServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>com.mysql.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:mysql://localhost:3306/testdb</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
        <init-param>
            <param-name>sql</param-name>
            <param-value>SELECT * FROM user</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>connDbServlet</servlet-name>
        <url-pattern>/conndb</url-pattern>
    </servlet-mapping>

</web-app>